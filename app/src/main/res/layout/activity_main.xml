<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingTop="24dp"
    android:paddingBottom="12dp"
    tools:context=".MainActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <HorizontalScrollView
                android:id="@+id/hs_katex_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="12dp"
                android:fillViewport="true"
                android:scrollbars="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <com.judemanutd.katexview.KatexView
                        android:id="@+id/katex_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:textColor="@android:color/black"
                        tools:ignore="MissingClass" />
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:textAlignment="center"
                android:textSize="20sp" />

            <HorizontalScrollView
                android:id="@+id/hs_katex_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fillViewport="true"
                android:scrollbars="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <com.judemanutd.katexview.KatexView
                        android:id="@+id/katex_answer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:textColor="@android:color/black"
                        tools:ignore="MissingClass" />
                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="bottom"
                android:paddingBottom="16dp">

                <android.widget.Button
                    android:onClick="solve"
                    android:text="Resolver"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/btn_tec"
                    android:layout_gravity="bottom"
                    android:background="@drawable/btn_bordernum"
                    tools:ignore="SpeakableTextPresentCheck" />

                <android.widget.Button
                    android:id="@+id/btn_view_solution"
                    android:onClick="openSolution"
                    android:text="Ver Solución"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/btn_tec"
                    android:background="@drawable/btn_bordernum"
                    android:visibility="gone"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="bottom">

        <!-- Tabs de teclado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="4dp"
            android:paddingBottom="8dp">

            <android.widget.Button
                style="@style/btn_tec"
                android:text="Num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                android:onClick="showNumKeyboard"
                android:maxLines="1"
                android:ellipsize="end"
                tools:ignore="SpeakableTextPresentCheck" />

            <android.widget.Button
                style="@style/btn_tec"
                android:text="abcd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                android:onClick="showAlphaKeyboard"
                android:maxLines="1"
                android:ellipsize="end"
                tools:ignore="SpeakableTextPresentCheck" />

            <android.widget.Button
                style="@style/btn_tec"
                android:text="alg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                android:onClick="showNumAlgKeyboard"
                android:maxLines="1"
                android:ellipsize="end"
                tools:ignore="SpeakableTextPresentCheck" />

            <android.widget.Button
                style="@style/btn_tec"
                android:text="trig"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                android:onClick="showTrigKeyboard"
                android:maxLines="1"
                android:ellipsize="end"
                tools:ignore="SpeakableTextPresentCheck" />

            <android.widget.Button
                style="@style/btn_tec"
                android:text="deriv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                android:onClick="showAvKeyboard"
                android:maxLines="1"
                android:ellipsize="end"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>

        <!-- Barra superior del teclado: estable con weights -->
        <LinearLayout
            android:id="@+id/toolbar_keyboard"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="#C1BEBE"
            android:paddingStart="4dp"
            android:paddingEnd="4dp">

            <android.widget.Button
                android:id="@+id/btn_saved"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="GUARDADOS"
                android:background="@drawable/tecselec"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/btn_left"
                android:onClick="moveCursorLeft"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/tecselec"
                android:src="@drawable/baseline_arrow_back_ios_24"
                android:scaleType="centerInside"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            <!-- Flecha derecha -->
            <ImageButton
                android:id="@+id/btn_right"
                android:onClick="moveCursorRight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/tecselec"
                android:src="@drawable/baseline_arrow_forward_ios_24"
                android:scaleType="centerInside"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            <android.widget.Button
                android:id="@+id/btn_angle_mode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="rad"
                android:onClick="toggleAngleMode"
                android:background="@drawable/tecselec"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/btn_delete"
                android:onClick="deleteChar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/tecselec"
                android:src="@drawable/baseline_backspace_24"
                android:scaleType="centerInside"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />


        </LinearLayout>

