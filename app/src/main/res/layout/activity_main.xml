                    android:background="@drawable/btn_bordernum" android:layout_columnWeight="1"
                    style="@style/TecladoButton" android:layout_width="0dp" android:layout_height="wrap_content"/>
                <android.widget.Button android:onClick="ins_char" android:text="."
                    android:layout_columnWeight="1" style="@style/TecladoButton"
                    android:layout_width="0dp" android:layout_height="wrap_content"/>
                <android.widget.Button android:onClick="ins_char" android:text="="
                    android:layout_columnWeight="1" style="@style/TecladoButton"
                    android:layout_width="0dp" android:layout_height="wrap_content"/>
                <android.widget.Button android:onClick="ins_char" android:text="+"
                    android:layout_columnWeight="1" style="@style/TecladoButton"
                    android:layout_width="0dp" android:layout_height="wrap_content"/>

            </GridLayout>

            <GridLayout
                android:id="@+id/keyboard_alf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="8"
                android:rowCount="4"
                android:padding="0dp"
                android:orientation="horizontal"
                android:useDefaultMargins="false">

                <android.widget.Button
