<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F1F8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gráfica"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#222222"
            android:paddingBottom="6dp"/>

        <!-- Encabezado con KaTeX para renderizar la expresión grande -->
        <com.judemanutd.katexview.KatexView
            android:id="@+id/kvHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="8dp"
            android:textColor="@android:color/black"
            android:scrollbars="none" />

        <!-- Etiqueta auxiliar (ej. Área [a,b]) -->
        <TextView
            android:id="@+id/tvAux"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:textColor="#555555"
            android:paddingBottom="4dp"/>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChart"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <!-- Botonera flotante: ahora opaca y con tamaño fijo -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="end|bottom"
        android:padding="12dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnZoomIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:backgroundTint="#5C4DB1"
            android:stateListAnimator="@null"/>

        <View
            android:layout_width="0dp"
            android:layout_height="8dp" />

        <Button
            android:id="@+id/btnZoomOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="−"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:backgroundTint="#5C4DB1"
            android:stateListAnimator="@null"/>

        <View
            android:layout_width="0dp"
            android:layout_height="8dp" />

        <Button
            android:id="@+id/btnResetZoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⟲"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:backgroundTint="#5C4DB1"
            android:stateListAnimator="@null"/>
    </LinearLayout>
</FrameLayout>
